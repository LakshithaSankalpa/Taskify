<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Taskify"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            app:srcCompat="@drawable/taskify_logo_bg" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Version 1.0-01.25"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#666666"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taskify is your simple and efficient companion for managing tasks and boosting productivity. Whether it's organizing daily errands, planning projects, or tracking goals, Taskify helps you stay on top of everything with ease."
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Features:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Intuitive Design\n• Customizable Tasks\n• Reminders\n• Progress Tracking\n• Cloud Sync"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed by:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lakshitha Sankalpa (24011231)\nCOM640 Advanced Mobile Development\nAssignment 2"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <!-- Portfolio Link -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Portfolio: http://lakshithasankalpa.com"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:layout_marginBottom="8dp"
            android:autoLink="web"/>

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: info@lakshithasankalpa.com"
            android:textSize="16sp"
            android:textColor="#2196F3"
            android:gravity="center"
            android:autoLink="email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stay tuned for exciting updates!"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="#444444"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
